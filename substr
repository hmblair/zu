#!/bin/zsh

if [ $# -ne 3 ]; then
  echo "Usage: ${0:t} STR START END"
  exit 1
fi

string="$1"
start="$2"
end="$3"

if [ "$start" -lt 0 ] || [ "$end" -lt 0 ] || [ "$start" -gt "$end" ]; then
  echo "Error: Invalid position values"
  exit 1
fi

length=$((end - start))
result="${string:$start:$length}"
echo "$result"
